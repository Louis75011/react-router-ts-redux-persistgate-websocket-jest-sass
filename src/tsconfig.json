{
    "compilerOptions": {
      "target": "es6",
      "module": "es6",
      "lib": ["es6", "dom"],
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "declaration": true,
      "outDir": "./dist",
      "rootDir": "./src"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }
  